<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN"
                               "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">

<struts-config>

	<!-- ========== Data Source Definitions ================================= -->
	<data-sources>
	</data-sources>
	<!-- ========== Data Source Definitions ================================= -->

	<!-- ========== Form Bean Definitions =================================== -->
	<form-beans>
		<form-bean name="LoginForm" type="org.apache.struts.action.DynaActionForm">
			<form-property name="userId" type="java.lang.String"/>
			<form-property name="password" type="java.lang.String"/>
        </form-bean>

		<!-- ********** PPT ***************** -->
		<form-bean name="ppt_BayForm" type="org.apache.struts.action.DynaActionForm">
			<form-property name="bay_id" type="java.lang.String"/>
        </form-bean>
		<form-bean name="ppt_CrrForm" type="org.apache.struts.action.DynaActionForm">
			<form-property name="crr_id" type="java.lang.String"/>
        </form-bean>
		<form-bean name="ppt_EqptForm" type="org.apache.struts.action.DynaActionForm">
			<form-property name="eqpt_id" type="java.lang.String"/>
			<form-property name="group_id" type="java.lang.String"/>
        </form-bean>
		<form-bean name="ppt_EqptDateForm" type="org.apache.struts.action.DynaActionForm">
			<form-property name="eqpt_id" type="java.lang.String"/>
			<form-property name="fr_date" type="java.lang.String"/>
			<form-property name="to_date" type="java.lang.String"/>
        </form-bean>
		<form-bean name="ppt_LotForm" type="org.apache.struts.action.DynaActionForm">
			<form-property name="lot_id" type="java.lang.String"/>
        </form-bean>
		<form-bean name="ppt_PosForm" type="org.apache.struts.action.DynaActionForm">
			<form-property name="position" type="java.lang.String"/>
        </form-bean>
		<form-bean name="ppt_ShtForm" type="org.apache.struts.action.DynaActionForm">
			<form-property name="sht_id" type="java.lang.String"/>
        </form-bean>
		<form-bean name="ppt_StcForm" type="org.apache.struts.action.DynaActionForm">
			<form-property name="stocker_id" type="java.lang.String"/>
        </form-bean>
		<form-bean name="ppt_DispForm" type="org.apache.struts.action.DynaActionForm">
			<form-property name="eqpt_id" type="java.lang.String"/>
			<form-property name="port_id" type="java.lang.String"/>
        </form-bean>
		<form-bean name="ppt_DateForm" type="org.apache.struts.action.DynaActionForm">
			<form-property name="fr_date" type="java.lang.String"/>
			<form-property name="to_date" type="java.lang.String"/>
        </form-bean>        
	</form-beans>

	<!-- ========== Global Exception Definitions ============================ -->
	<global-exceptions>
		<exception
			key="com.error.exception"
			type="java.lang.Exception"
			handler="org.apache.struts.action.ExceptionHandler"
			path="/commons/error/exception.jsp"/>
	</global-exceptions>

	<!-- ========== Global Forward Definitions ============================== -->
	<global-forwards>
	  <forward name="ppt_Error" path="/ppt/error/pptError.jsp"/>
	  <forward name="ppt_transactionError" path="/ppt/error/trxError.jsp"/>
	  <forward name="ppt_transactionTimeout" path="/ppt/error/trxTimeout.jsp"/>
	</global-forwards>

	<!-- ========== Action Mapping Definitions ============================== -->
	<action-mappings>

		<!-- ********** CFM ***************** -->	
		<action path="/cfm_logout" type="com.ibm.lcd.commons.action.LogoutAction">
			<forward name="success" path="/cfm/admin/menu.jsp"/>
		</action>
		<action path="/cfm_closeWindow" type="com.ibm.lcd.commons.action.LogoutAction">
			<forward name="success" path="/cfm/admin/closeWindow.jsp"/>
		</action>
		
		<action path="/cfm_statList"     type="com.ibm.lcd.cfm.action.CSVBrokerAction"/>

		<!-- ********** PPT ***************** -->
		<action path="/ppt_eqptAlrtList" type="com.ibm.lcd.ppt.action.inquiry.EqptAlrtListAction" name="ppt_EqptDateForm">
			<forward name="success" path="/ppt/inquiry/eqptAlrtList.jsp"/>
		</action>
		<action path="/ppt_eqptInfo" type="com.ibm.lcd.ppt.action.inquiry.EqptInfoAction" name="ppt_EqptForm">
			<forward name="success" path="/ppt/inquiry/eqptInfo.jsp"/>
		</action>
		<action path="/ppt_inprList" type="com.ibm.lcd.ppt.action.inquiry.InprListAction" name="ppt_EqptForm">
			<forward name="success" path="/ppt/inquiry/inprList.jsp"/>
		</action>
		<action path="/ppt_wipList" type="com.ibm.lcd.ppt.action.inquiry.WipListAction" name="ppt_EqptForm">
			<forward name="success" path="/ppt/inquiry/wipList.jsp"/>
		</action>
		<action path="/ppt_allEqptAlarmList" type="com.ibm.lcd.ppt.action.inquiry.AllEqptAlarmListAction" name="ppt_DateForm">
			<forward name="success" path="/ppt/inquiry/allEqptAlarmList.jsp"/>
		</action>
		<action path="/ppt_allEqptAlarmHis" type="com.ibm.lcd.ppt.action.inquiry.AllEqptAlarmHisAction" name="ppt_DateForm">
			<forward name="success" path="/ppt/inquiry/allEqptAlarmList.jsp"/>
		</action>
		<action path="/ppt_logout" type="com.ibm.lcd.commons.action.LogoutAction">
			<forward name="success" path="/ppt/index.jsp"/>
		</action>
		<action path="/ppt_crrInfo" type="com.ibm.lcd.ppt.action.inquiry.CrrInfoAction" name="ppt_CrrForm">
			<forward name="success" path="/ppt/inquiry/crrInfo.jsp"/>
		</action>
		<action path="/ppt_eqptList" type="com.ibm.lcd.ppt.action.inquiry.EqptListAction" name="ppt_BayForm">
			<forward name="success" path="/ppt/inquiry/eqptList.jsp"/>
		</action>
		<action path="/ppt_eqptStatHis" type="com.ibm.lcd.ppt.action.inquiry.EqptStatHisAction" name="ppt_EqptDateForm">
			<forward name="success" path="/ppt/inquiry/eqptStatHis.jsp"/>
		</action>
		<action path="/ppt_lotInfo" type="com.ibm.lcd.ppt.action.inquiry.LotInfoAction" name="ppt_LotForm">
			<forward name="success" path="/ppt/inquiry/lotInfo.jsp"/>
		</action>
		<action path="/ppt_shtHis" type="com.ibm.lcd.ppt.action.inquiry.ShtHisAction" name="ppt_ShtForm">
			<forward name="success" path="/ppt/inquiry/shtHis.jsp"/>
		</action>
		<action path="/ppt_shtInfo" type="com.ibm.lcd.ppt.action.inquiry.ShtInfoAction" name="ppt_ShtForm">
			<forward name="success" path="/ppt/inquiry/shtInfo.jsp"/>
		</action>
		<action path="/ppt_allEqptAlrtList" type="com.ibm.lcd.ppt.action.inquiry.AllEqptAlrtListAction" name="ppt_EqptForm">
			<forward name="success" path="/ppt/inquiry/allEqptAlrtList.jsp"/>
		</action>
		<action path="/ppt_unitStatHis" type="com.ibm.lcd.ppt.action.inquiry.UnitStatHisAction" name="ppt_EqptDateForm">
			<forward name="success" path="/ppt/inquiry/unitStatHis.jsp">
			</forward>
		</action>
		<action path="/ppt_bulletinInfo" type="com.ibm.lcd.ppt.action.inquiry.BulletinBoardQueryAction"/>
	</action-mappings>

	<!-- ========== Controller Configuration ================================ -->
	<controller
		contentType="text/html;charset=UTF-8"
		locale="true"
		nocache="true"
		debug="0"
		processorClass="org.apache.struts.tiles.TilesRequestProcessor" />

	<!-- ========== Message Resources Definitions =========================== -->
	<message-resources parameter="LcdResources"/>

	<!-- ========== Plug Ins Configuration ================================== -->

	<plug-in className="org.apache.struts.tiles.TilesPlugin">
		<set-property property="definitions-config" value="/WEB-INF/tiles-defs.xml" />
		<set-property property="definitions-debug" value="0" />
		<set-property property="definitions-parser-details" value="0" />
		<set-property property="definitions-parser-validate" value="true" />
	</plug-in>

	<plug-in className="com.ibm.lcd.commons.plugin.LcdPlugin">
		<set-property property="lcdConfig" value="/WEB-INF/lcd.config"/>
	</plug-in>

</struts-config>
